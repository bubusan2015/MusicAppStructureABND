<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/song_playlist_item"
    android:padding="@dimen/default_padding"
    android:background="@color/background1"
    >
<ImageView
    android:id="@+id/iv_li_album"
    android:layout_alignParentStart="true"
    android:layout_centerHorizontal="true"
    android:layout_width="@dimen/image_list_item_size"
    android:layout_height="@dimen/image_list_item_size"
    android:layout_marginEnd="@dimen/default_margin"
    />
    <Button
        android:id="@+id/bt_li_play"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/play_button"
        android:layout_marginStart="@dimen/default_half_margin"
        android:layout_width="@dimen/image_list_item_size"
        android:layout_height="@dimen/image_list_item_size"
        android:focusable="false"
        />

    <Button
        android:id="@+id/bt_li_info"
        android:layout_width="@dimen/image_list_item_size"
        android:layout_height="@dimen/image_list_item_size"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/bt_li_play"
        android:background="@drawable/info_button"
        android:focusable="false" />
    <TextView
        android:id="@+id/tv_li_songName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_li_album"
        android:layout_toStartOf="@id/bt_li_info"
        tools:text="black or white..."
        android:textSize="@dimen/details_font_size_2"
        android:textStyle="normal"
        android:textColor="@color/foreground2"
        android:maxLines="1"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/tv_li_artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_li_album"
        android:layout_toStartOf="@id/bt_li_info"
        android:layout_below="@id/tv_li_songName"
        tools:text="michael jackson"
        android:textSize="@dimen/details_font_size_1"
        android:textColor="@color/foreground1"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        />



</RelativeLayout>